{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitThis": true,
    "paths": {
      "nhsuk-frontend": ["./packages/nhsuk-frontend/src/nhsuk/index.mjs"],
      "nhsuk-frontend/*": ["./packages/nhsuk-frontend/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": []
  },
  "exclude": ["**/node_modules", "**/dist"],
  "typeAcquisition": {
    "enable": false
  }
}
