{% from 'components/header/macro.njk' import header %}
{% from 'components/skip-link/macro.njk' import skipLink %}

{% extends 'layout.njk' %}

{% block header %}
  {{ skipLink({
    "URL": "#maincontent",
    "heading": "Skip to main content"
  }) }}

  {{ header({
    "showNav": "false",
    "showSearch": "false",
    "homeHref": "https://www.nhs.uk"
    })
  }}
{% endblock %}


{% block body %}

  {% block breadcrumb %}{% endblock %}

  <div class="nhsuk-width-container">
    <main class="nhsuk-main-wrapper" id="maincontent">

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
          {% block heading %}{% endblock %}
        </div>
      </div>

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-full">
          {% block fullWidthContent %}{% endblock %}
        </div>
      </div>

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
          {% block content %}{% endblock %}
        </div>
      </div>

    </main>
  </div>

{% endblock %}

{% block footer %}

  {{ footer({
    "links": [
      {
        "URL": "https://github.com/nhsuk/nhsuk-frontend",
        "label": "GitHub - NHS.UK frontend"
      }
    ]
  })}}

{% endblock %}
