{% set html_style = 'background-color: #f0f4f5;' %}
{% set title = 'Radios without fieldset' %}
{% from 'components/radios/macro.njk' import radios %}
{% extends 'layout.njk' %}

{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
      {{ radios({
        "name": "colours",
        "items": [
          {
            "value": "red",
            "text": "Red"
          },
          {
            "value": "green",
            "text": "Green"
          },
          {
            "value": "blue",
            "text": "Blue"
          }
        ]
      }) }}
    </div>
  </div>
{% endblock %}
