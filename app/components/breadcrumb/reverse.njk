{% set title = 'Breadcrumb reverse' %}
{% from 'components/breadcrumb/macro.njk' import breadcrumb %}
{% extends 'example.njk' %}

{% block main %}

<section style="background-color: #005eb8;">
  <div class="nhsuk-width-container">
    <main class="nhsuk-main-wrapper" id="maincontent">

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
          {{ breadcrumb({
              classes: "nhsuk-breadcrumb--reverse",
              items: [
                {
                  href: "#",
                  text: "Level one",
                  attributes: { lang: "en" }
                },
                {
                  href: "#",
                  text: "Level two"
                },
                {
                  href: "#",
                  text: "Level three",
                  attributes: { lang: "en" }
                },
                {
                  href: "#",
                  text: "Level four",
                  classes: "example-class-one example-class-two",
                  attributes: { lang: "en" }
                }
              ]
            }) }}
        </div>
      </div>
    </main>
  </div>
</section>

{% endblock %}
