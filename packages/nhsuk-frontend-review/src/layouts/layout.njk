{% extends "nhsuk/template.njk" %}

{% block pageTitle -%}
  {%- if errors === true or (errors | length) %}Error: {% endif -%}
  {%- if pageName %}{{ pageName }} – {% endif -%}
  {{ serviceName }} – NHS
{%- endblock %}

{% block head %}
  {% include "partials/meta.njk" %}

  <link href="{{ baseUrl }}stylesheets/nhsuk-frontend.min.css" rel="stylesheet">
  <link href="{{ baseUrl }}stylesheets/application.min.css" rel="stylesheet">
{% endblock %}

{# Turn the header and footer off #}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block bodyEnd %}
  <script type="module" src="{{ baseUrl }}javascripts/nhsuk-frontend.min.js"></script>
  <script type="module" src="{{ baseUrl }}javascripts/application.min.js"></script>
{% endblock %}}
