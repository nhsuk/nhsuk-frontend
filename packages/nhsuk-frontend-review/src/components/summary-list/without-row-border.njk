{% set title = 'Summary list without row border' %}
{% from "nhsuk/components/summary-list/macro.njk" import summaryList %}
{% extends 'example.njk' %}

{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">

      {{ summaryList({
        rows: [
          {
            key: {
              text: "Name"
            },
            value: {
              text: "Sarah Philips"
            }
          },
          {
            key: {
              text: "Date of birth"
            },
            value: {
              text: "5 January 1978"
            }
          },
          {
            key: {
              text: "Contact information"
            },
            value: {
              html: "72 Guild Street<br>London<br>SE23 6FH"
            }
          },
          {
            classes: "nhsuk-summary-list__row--no-border",
            key: {
              text: "Contact details"
            },
            value: {
              html: '<p>07700 900457</p><p>sarah.philips@example.com</p>'
            }
          }
        ]
      }) }}

    </div>
  </div>
{% endblock %}
