{% extends "layouts/page.njk" %}

{% block header %}
  {% include "partials/banner.njk" %}
{% endblock %}

{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
      <h1 class="nhsuk-heading-xl nhsuk-u-margin-bottom-4">{{ serviceName }}</h1>
      <p class="nhsuk-body nhsuk-u-margin-bottom-8">Deployed automatically from <a href="https://github.com/nhsuk/nhsuk-frontend/commits/{{ branchName }}" rel="noreferrer noopener" target="_blank"><code>{{ branchName }}</code> branch (opens in newÂ tab).</a></p>
    </div>
  </div>

  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-one-third">
      <h2 id="components" class="nhsuk-heading-l">Components</h2>

      <ul class="nhsuk-list">
        {% for data in components %}
          <li><a href="components/{{ data.component }}/">{{ data.name }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <div class="nhsuk-grid-column-one-third">
      <h2 id="examples" class="nhsuk-heading-l">Examples</h2>

      <ul class="nhsuk-list">
        <li><a href="examples/all/">All component examples</a></li>
        <li><a href="examples/all-buttons/">All button examples</a></li>
        <li><a href="examples/all-icons/">All icon examples</a></li>
        <li><a href="examples/all-links/">All link examples</a></li>
        <li><a href="examples/all-tags/">All tag examples</a></li>
        <li><a href="examples/button-group/">Button group</a></li>
        <li><a href="examples/card-group/">Card group</a></li>
        <li><a href="examples/components-in-details/">Components in details</a></li>
        <li><a href="examples/conditional-reveals/">Conditional reveals</a></li>
        <li><a href="examples/error-summary-linking-to-input/">Error summary with link to an input field</a></li>
        <li><a href="examples/error-summary-linking-to-radios/">Error summary with link to a radio field</a></li>
        <li><a href="examples/expander-group/">Expander group</a></li>
        <li><a href="examples/expander-alongside-card/">Expander alongside card</a></li>
        <li><a href="examples/multiple-radio-groups/">Multiple radio groups</a></li>
        <li><a href="examples/small-form-controls/">Small form controls</a></li>
        <li><a href="examples/task-list-multiple-sections/">Task list with multiple sections</a></li>
        <li><a href="examples/translated/">Translated examples</a></li>
        <li><a href="examples/typography/">Typography and spacing</a></li>
      </ul>
    </div>
  </div>

  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
      <hr class="nhsuk-section-break nhsuk-section-break--xl nhsuk-section-break--visible">

      <h2 class="nhsuk-heading-l">Documentation</h2>
      <p class="nhsuk-body"><a class="nhsuk-link" href="docs/sassdoc/">Sass API reference</a></p>
    </div>
  </div>
{% endblock %}
