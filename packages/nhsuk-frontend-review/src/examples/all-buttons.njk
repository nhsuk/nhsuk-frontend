{% extends 'layouts/page.njk' %}

{% set title = 'Buttons' %}

{% block main %}
  <main id="maincontent">
    <section class="nhsuk-main-wrapper">
      <div class="nhsuk-width-container">

        <div class="nhsuk-grid-row">
          <div class="nhsuk-grid-column-two-thirds">
            <h1 class="nhsuk-heading-xl">Buttons</h1>
          </div>
        </div>

        <div class="nhsuk-grid-row">
          <div class="nhsuk-grid-column-two-thirds">
            <h2 class="nhsuk-heading-l nhsuk-u-margin-bottom-0">Page background</h2>
          </div>
        </div>

        <div class="nhsuk-grid-row">
          <div class="nhsuk-grid-column-one-third">
            <p class="nhsuk-body nhsuk-u-margin-top-6">Button element</p>

            <div class="nhsuk-button-group">
              {{ button({
                "text": "Save and continue"
              }) }}

              {{ button({
                "text": "Yes, delete this vaccine",
                "classes": "nhsuk-button--warning"
              }) }}

              {{ button({
                "text": "Continue",
                "classes": "nhsuk-button--login"
              }) }}

              {{ button({
                "text": "Find my location",
                "classes": "nhsuk-button--secondary"
              }) }}
            </div>
          </div>

          <div class="nhsuk-grid-column-one-third">
            <p class="nhsuk-body nhsuk-u-margin-top-6">Link element</p>

            <div class="nhsuk-button-group">
