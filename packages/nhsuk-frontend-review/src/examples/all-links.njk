{% extends "layouts/page-full-width.njk" %}

{% set pageName = "Links" %}

{% block beforeContent %}
  {{ breadcrumb({
    classes: "nhsuk-u-display-inline-block",
    items: [
      {
        text: "NHS.UK frontend",
        href: baseUrl
      },
      {
        text: "Examples",
        href: baseUrl ~ "#examples"
      }
    ]
  }) }}
{% endblock %}

{% block content %}
  <section class="nhsuk-main-wrapper nhsuk-main-wrapper--s">
    <div class="nhsuk-width-container">

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
          <h1 class="nhsuk-heading-xl">{{ pageName }}</h1>
          <h2 class="nhsuk-heading-l nhsuk-u-margin-bottom-6">Page background</h2>
        </div>
      </div>

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-one-third">

          {{ backLink() }}

          <br>

          {{ backLink({
            text: "Back to search results"
          }) }}

          <br>

          {{ breadcrumb({
            labelText: "Breadcrumb (page background)",
            classes: "nhsuk-u-margin-bottom-4",
            items: [
              {
                text: "Example one",
                href: "#"
              },
              {
                text: "Example two",
                href: "#"
              }
            ]
          }) }}

          <p><a href="#" class="nhsuk-link">Example link 1</a></p>

          <p><a href="#" class="nhsuk-link">Example link 2</a></p>

          {{ actionLink({
            text: "Action link",
            classes: "nhsuk-u-margin-top-2",
            href: "#"
          }) }}

        </div>
      </div>
    </div>
  </section>

  <section class="nhsuk-main-wrapper app-wrapper app-wrapper--background-white">
    <div class="nhsuk-width-container">

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
          <h2 class="nhsuk-heading-l nhsuk-u-margin-bottom-6">White background</h2>
        </div>
      </div>

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-one-third">

          {{ backLink() }}

          <br>

          {{ backLink({
            text: "Back to search results"
          }) }}

          <br>

          {{ breadcrumb({
            labelText: "Breadcrumb (white background)",
            classes: "nhsuk-u-margin-bottom-4",
            items: [
              {
                text: "Example one",
                href: "#"
              },
              {
                text: "Example two",
                href: "#"
              }
            ]
          }) }}

          <p><a href="#" class="nhsuk-link">Example link 1</a></p>

          <p><a href="#" class="nhsuk-link">Example link 2</a></p>

          {{ actionLink({
            text: "Action link",
            classes: "nhsuk-u-margin-top-2",
            href: "#"
          }) }}

        </div>
      </div>
    </div>
  </section>

  <section class="nhsuk-main-wrapper app-wrapper app-wrapper--background-grey">
    <div class="nhsuk-width-container">

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
          <h2 class="nhsuk-heading-l nhsuk-u-margin-bottom-6">Grey background (used in footer)</h2>
        </div>
      </div>

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-one-third">

          {{ backLink() }}

          <br>

          {{ backLink({
            text: "Back to search results"
          }) }}

          <br>

          {{ breadcrumb({
            labelText: "Breadcrumb (grey background)",
            classes: "nhsuk-u-margin-bottom-4",
