{% extends "layouts/example.njk" %}

{% set heading = "Error summary" %}
{% set caption = "Link to an input field" %}
{% set pageName = heading ~ " – " ~ caption %}
{% set mainClasses = "nhsuk-main-wrapper--s" %}

{% block beforeContent %}
  {{ breadcrumb({
    classes: "nhsuk-u-display-inline-block",
    items: [
      {
        text: "NHS.UK frontend",
        href: baseUrl
      },
      {
        text: "Examples",
        href: baseUrl ~ "#examples"
      }
    ]
  }) }}
{% endblock %}

{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
      {% call errorSummary({
        titleText: "There is a problem",
        errorList: [
          {
            text: "Link to input error with explanation",
            href: "#example"
          }
        ]
      }) %}
        Optional description of the errors and how to correct them.<br>
        Note that the error summary should receive focus on page load using the JavaScript that comes with this component.
      {% endcall %}

      <h1 class="nhsuk-heading-xl">{{ heading }} <span class="nhsuk-caption-xl nhsuk-caption--bottom">{{ caption }}</span></h1>

      <br><br><br><br><br><br>↕ Intentionally long page to demonstrate error summary link scrolling behaviour ↕<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>

      {{ input({
        label: {
          text: "NHS number"
        },
        hint: {
          text: "Clicking an error summary link should scroll the top of this input's label into view"
        },
        errorMessage: {
          text: "Enter NHS number"
        },
        name: "example"
      }) }}

      <br><br><br><br><br><br>↕ Intentionally long page to demonstrate error summary link scrolling behaviour ↕<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>

    </div>
  </div>
{% endblock %}
