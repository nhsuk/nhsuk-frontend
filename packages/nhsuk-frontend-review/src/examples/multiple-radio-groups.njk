
{% extends 'layouts/page.njk' %}

{% set title = 'Multiple radio groups' %}

{% block content %}
  <h1 class="nhsuk-heading-xl">{{ title }}</h1>

  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-one-half">
      <form method="post" novalidate>
        {% call fieldset({
          legend: {
            text: "What is your favourite colour?",
            classes: "nhsuk-fieldset__legend--l"
          }
        }) %}
          <h3 class="nhsuk-heading-m">Warm colours</h3>
          {{ radios({
            idPrefix: "warm",
            name: "colour",
            items: [
              {
                value: "red",
                text: "Red",
                conditional: {
                  html: '<p class="nhsuk-body">Nice choice, I like red too.</p>'
                }
              },
              {
                value: "orange",
                text: "Orange",
                conditional: {
                  html: '<p class="nhsuk-body">Nice choice, I like orange too.</p>'
                }
              }
            ]
          }) }}

        <h3 class="nhsuk-heading-m">Cool colours</h3>
        {{ radios({
          idPrefix: "cool",
          name: "colour",
          items: [
            {
              value: "blue",
              text: "Blue",
              conditional: {
                html: '<p class="nhsuk-body">Nice choice, I like blue too.</p>'
              }
            },
            {
              value: "green",
              text: "Green",
              conditional: {
                html: '<p class="nhsuk-body">Boo, you monster...</p>'
              }
            }
          ]
        }) }}

        <h3 class="nhsuk-heading-m">Do you like colours in general?</h3>
        {{ radios({
          idPrefix: "colours-in-general",
          name: "colours-in-general",
          items: [
            {
              value: "yes",
              text: "Yes",
              conditional: {
                html: '<p class="nhsuk-body">Fair enough.</p>'
              }
            },
            {
              value: "no",
              text: "No",
              conditional: {
                html: '<p class="nhsuk-body">No judgment.</p>'
              }
            }
          ]
        }) }}
        {% endcall %}

        <div class="nhsuk-button-group">
          {{ button({
            text: "Save and continue"
          }) }}
        </div>
      </form>
    </div>
    <div class="nhsuk-grid-column-one-half">
      <form method="get" novalidate>
        {% call fieldset({
          legend: {
            text: "What is your least favourite colour?",
            classes: "nhsuk-fieldset__legend--l"
          }
        }) %}
          <h3 class="nhsuk-heading-m">Warm colours</h3>
          {{ radios({
            idPrefix: "least-warm",
            name: "colour",
            items: [
              {
                value: "red",
                text: "Red",
                conditional: {
                  html: '<p class="nhsuk-body">Nice choice, I like red too.</p>'
                }
              },
              {
                value: "orange",
                text: "Orange",
                conditional: {
                  html: '<p class="nhsuk-body">Nice choice, I like orange too.</p>'
                }
              }
            ]
          }) }}

          <h3 class="nhsuk-heading-m">Cool colours</h3>
          {{ radios({
            idPrefix: "least-cool",
            name: "colour",
            items: [
              {
                value: "blue",
                text: "Blue",
                conditional: {
                  html: '<p class="nhsuk-body">Nice choice, I like blue too.</p>'
                }
              },
              {
                value: "green",
                text: "Green",
                conditional: {
                  html: '<p class="nhsuk-body">Boo, you monster...</p>'
                }
              }
            ]
          }) }}
        {% endcall %}

        <div class="nhsuk-button-group">
          {{ button({
            text: "Save and continue"
          }) }}
        </div>
      </form>

      <h3 class="nhsuk-heading-m">A question that is not in a form</h3>
      {{ radios({
        idPrefix: "question-not-in-form",
        name: "question-not-in-form",
        items: [
          {
            value: "yes",
            text: "Yes",
            conditional: {
              html: '<p class="nhsuk-body">Fair enough.</p>'
            }
          },
          {
            value: "no",
            text: "No",
            conditional: {
              html: '<p class="nhsuk-body">No judgment.</p>'
            }
          }
        ]
      }) }}
    </div>
  </div>
{% endblock %}
