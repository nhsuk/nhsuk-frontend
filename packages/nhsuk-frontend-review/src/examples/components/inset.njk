      {% endset -%}

      {{ tabs({
        items: [
          {
            label: "Tab 1",
            id: "tab-1",
            panel: {
              html: tab1Content
            }
          },
          {
            label: "Tab 2",
            id: "tab-2",
            panel: {
              html: tab2Content
            }
          },
          {
            label: "Tab 3",
            id: "tab-3",
            panel: {
              html: tab3Content
            }
          }
        ]
      }) }}

      {% call insetText() %}
        <p>If you drive you must tell the <a href="https://www.gov.uk/contact-the-dvla" title="External website">DVLA</a> about your vertigo. Visit the GOV.UK website for more information on <a href="https://www.gov.uk/dizziness-and-driving" title="External website">driving with vertigo</a></p>
      {% endcall %}

      {{ input({
        label: {
          text: "NHS number"
        },
        hint: {
          html: 'This is a 10 digit number (like <span class="nhsuk-u-nowrap">999 123 4567</span>) that you can find on an NHS letter, prescription or in the NHS App'
        },
        errorMessage: {
          text: "Enter your NHS number"
        },
        name: "nhs-number-error",
        classes: "nhsuk-input--width-10 nhsuk-input--code",
        inputmode: "numeric",
        spellcheck: false
      }) }}

      {{ pagination({
        previous: {
          labelText: "Treatments",
          href: "#"
        },
        next: {
          labelText: "Symptoms",
          href: "#"
        }
      }) }}

      {{ pagination({
        previous: {
          href: "#"
        },
        next: {
          href: "#"
        },
        items: [
          {
            number: 1,
            href: "#"
          },
          {
            ellipsis: true
          },
          {
            number: 8,
            href: "#"
          },
          {
            number: 9,
            href: "#"
          },
          {
            number: 10,
            href: "#",
            current: true
          },
          {
            number: 11,
            href: "#"
          },
          {
            number: 12,
            href: "#"
          },
          {
            ellipsis: true
          },
          {
            number: 42,
            href: "#"
          }
        ]
      }) }}
    </div>
  </div>
{% endblock %}
