{% extends "layouts/page-full-width.njk" %}

{% set pageName = "Small buttons" %}

{% block beforeContent %}
  {{ breadcrumb({
    classes: "nhsuk-u-display-inline-block",
    items: [
      {
        text: "NHS.UK frontend",
        href: baseUrl
      },
      {
        text: "Examples",
        href: baseUrl ~ "#examples"
      }
    ]
  }) }}
{% endblock %}

{% block content %}
  <section class="nhsuk-main-wrapper nhsuk-main-wrapper--s">
    <div class="nhsuk-width-container">

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
          <h1 class="nhsuk-heading-xl">{{ pageName }}</h1>
        </div>
      </div>

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-one-third">
          <p class="nhsuk-body nhsuk-u-margin-top-6">Button element</p>

          <div class="nhsuk-button-group">
            {{ button({
              classes: "nhsuk-button--small",
              text: "Save and continue"
            }) }}

            {{ button({
              text: "Yes, delete this vaccine",
              classes: "nhsuk-button--small nhsuk-button--warning"
            }) }}

            {{ button({
              text: "Continue",
              classes: "nhsuk-button--small nhsuk-button--login"
            }) }}

            {{ button({
              text: "Find my location",
              classes: "nhsuk-button--small nhsuk-button--secondary"
            }) }}
          </div>
        </div>

        <div class="nhsuk-grid-column-one-third">
          <p class="nhsuk-body nhsuk-u-margin-top-6">Link element</p>

          <div class="nhsuk-button-group">
            {{ button({
              classes: "nhsuk-button--small",
              text: "Save and continue",
              href: "#"
            }) }}

            {{ button({
              text: "Yes, delete this vaccine",
              classes: "nhsuk-button--small nhsuk-button--warning",
              href: "#"
            }) }}

            {{ button({
              text: "Continue",
              classes: "nhsuk-button--small nhsuk-button--login",
              href: "#"
            }) }}

            {{ button({
              text: "Find my location",
              classes: "nhsuk-button--small nhsuk-button--secondary",
              href: "#"
            }) }}
          </div>
        </div>

        <div class="nhsuk-grid-column-one-third">
          <p class="nhsuk-body nhsuk-u-margin-top-6">Disabled</p>

          <div class="nhsuk-button-group">
            {{ button({
              classes: "nhsuk-button--small",
              text: "Save and continue",
              disabled: true
            }) }}

            {{ button({
              text: "Yes, delete this vaccine",
              classes: "nhsuk-button--small nhsuk-button--warning",
              disabled: true
            }) }}

            {{ button({
              text: "Continue",
              classes: "nhsuk-button--small nhsuk-button--login",
              disabled: true
            }) }}

            {{ button({
              text: "Find my location",
              classes: "nhsuk-button--small nhsuk-button--secondary",
              disabled: true
            }) }}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
