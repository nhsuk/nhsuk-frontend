<footer role="contentinfo">
  <div class="nhsuk-footer
    {%- if params.classes %} {{ params.classes }}{% endif %}" id="nhsuk-footer"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    <div class="nhsuk-width-container">
      {%- if params.links %}
      <h2 class="nhsuk-u-visually-hidden">Support links</h2>
      <ul class="nhsuk-footer__list {%- if params.list %} {{ params.list }}{% endif %}">
        {%- for item in params.links %}
        <li class="nhsuk-footer__list-item"><a class="nhsuk-footer__list-item-link" href="{{ item.URL }}">{{ item.label }}</a></li>
        {%- endfor %}
      </ul>
      {% endif %}
      <p class="nhsuk-footer__copyright">{% if params.copyright %}{{ params.copyright | safe }}{% else %}&copy; Crown copyright{% endif %}</p>
    </div>
  </div>
</footer>
