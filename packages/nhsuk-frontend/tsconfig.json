{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolvePackageJsonImports": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2015",
    "types": ["node", "typed-query-selector"]
  },
  "include": ["src/**/*.js", "src/**/*.mjs"],
  "exclude": ["src/**/*.test.mjs"]
}
