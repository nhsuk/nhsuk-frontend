{% from "nhsuk/macros/attributes.njk" import nhsukAttributes -%}

{% set visuallyHiddenText = params.visuallyHiddenText | default("Error") -%}
{% set errorMessageText = params.html | safe | trim | indent(2) if params.html else params.text -%}

<span {%- if params.id %} id="{{ params.id }}"{% endif %} class="nhsuk-error-message {%- if params.classes %} {{ params.classes }}{% endif %}"
  {{- nhsukAttributes(params.attributes) }}>
  {% if visuallyHiddenText %}
  <span class="nhsuk-u-visually-hidden">{{ visuallyHiddenText }}:</span> {{ errorMessageText }}
  {% else %}
  {{ errorMessageText }}
  {% endif %}
</span>
