{% from "nhsuk/macros/attributes.njk" import nhsukAttributes %}
{% from "nhsuk/macros/icon.njk" import nhsukIcon %}

{#- Set classes for this component #}
{%- set classNames = "nhsuk-action-link" -%}

{%- if params.classes %}
  {% set classNames = classNames ~ " " ~ params.classes %}
{% endif -%}

<a {%- if params.id %} id="{{ params.id }}"{% endif %} class="{{ classNames }}" href="{{ params.href | default("#", true) }}"
  {%- if params.openInNewWindow %} target="_blank"{% endif %}
  {{- nhsukAttributes(params.attributes) }}>
  {{ nhsukIcon("arrow-right-circle") | trim | indent(2) }}
  <span class="nhsuk-action-link__text">
    {{- params.html | safe | trim | indent(2) if params.html else params.text -}}
  </span>
</a>
