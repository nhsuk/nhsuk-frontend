{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "strictNullChecks": false,
    "types": [
      "@testing-library/jest-dom",
      "jest",
      "jest-axe",
      "jest-puppeteer",
      "node",
      "typed-query-selector"
    ]
  },
  "include": [
    "./packages/*/src/**/*.test.mjs",
    "./packages/*/src/**/fixtures.mjs",
    "./packages/*/src/**/macro-options.mjs",
    "./packages/*/tasks/**/*.mjs",
    "./packages/*/gulpfile.mjs",
    "./packages/*/.htmlvalidate.js",
    "./packages/*/*.config.js",
    "./packages/*/*.config.mjs",
    "./shared/helpers/jest/**/*.setup.mjs",
    "./tests/backstop/engine_scripts/**/*.js",
    "./.prettierrc.js",
    "./.stylelintrc.js",
    "./*.config.js",
    "./*.config.mjs"
  ]
}
